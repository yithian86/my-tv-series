//-                  Title                   -//
div(style="text-align:center")
  h1 Welcome to {{ 'sto cazzo' }}!


//-             Search torrent               -//
div(style="float:left; width:60%; margin:12px")
  app-search-torrent(
    '[triggerError]'="triggerError"
    '[uploadCurrentSeries]'="uploadCurrentSeries"
    '[currentSeriesIndex]'="currentSeriesIndex"
    '[searchForm]'="searchForm"
    '[watchList]'="watchList"
  )

  div('[ngClass]'="{'ErrorMessageBox': !!errorMessage}") {{ errorMessage }}


//-            My tv series list            -//
div(style="float:right; width:33%; margin:12px")
  app-watchlist(
    '[selectSeries]'="selectSeries"
    '[triggerError]'="triggerError"
    '[watchList]'="watchList"
  )

  //-             Add series form               -//
  app-add-series-form(
    '[uploadWatchlist]'="uploadWatchlist"
    '[addSeriesForm]'="addSeriesForm"
    '[watchList]'="watchList"
  )
  
