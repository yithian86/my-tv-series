//-                  Title                   -//
div(style="text-align:center")
  h1 Welcome to {{ 'sto cazzo' }}!


//-             Search torrent               -//
div(style="float:left; width:50%; margin:18px")

  //-             Search form               -//
  form('[formGroup]'="searchForm")
    h3 Scavenge your tv series:

    .SearchWrapper
      input.InputName(type="text" formControlName="inputName" required)
      input.InputNumber(style="width:32px" type="number" value="8" formControlName="inputSeason" required)
      input.InputNumber(style="width:32px" type="number" value="5" formControlName="inputEpisode" required)
      button.SearchButton(class="btn btn-primary" '(click)'="searchBtnAction()") Search!
      button.SearchButton(class="btn btn-primary" '(click)'="updateMySeries()") Update my series!

  //-             Search results               -//
  table(style="width:100%" class="table table-striped table-hover")
    thead(class="theader-dark")
      tr
        th(style="text-align:center") Torrent
        th(style="text-align:center") Size
        th(style="text-align:center") Seeders
        //- th(style="text-align:center") Date

    tbody
      tr('*ngFor'="let res of searchResult; let i=index" '[attr.data-index]'="i")
        td
          a('[href]'="getMagnetLink(res)") {{ getMagnetTitle(titleResult[i]) }}
        td(style="text-align:center") {{ getMagnetSize(sizeResult[i]) }}
        td(style="text-align:center") {{ getMagnetSeeders(seedersResult[i]) }}
        //- td(style="text-align:center") {{getMagnetDate(dateResult[i])}}

  div(style="text-align:center") {{ errorMessage }}


//-          My tv series list            -//
div(style="float:right; width:30%; margin:18px")

  h3(style="text-align:center") Watchlist

  table(class="table table-striped table-hover")
    thead(class="theader-dark")
      tr
        th(style="text-align:center") Title
        th(style="text-align:center") Season
        th(style="text-align:center") Episode
        th(style="text-align:center") Next Airing

    tbody
      tr(
        '*ngFor'="let series of mySeriesList; let i=index"
        '[attr.data-index]'="i"
        '(click)'="selectSeries(series, i)"
        '[ngClass]'="{'clickable': true, 'AirsToday': airsToday(series), 'AiredBeforeToday': airedBeforeToday(series)}"
      )
        td {{ series.name }}
        td(style="text-align:center") {{ getSeriesNumberValue(series.season) }}
        td(style="text-align:center") {{ getSeriesNumberValue(series.episode) }}
        td(style="text-align:center; font-size: 12px")
          div {{ series.nextAiringDate | date }}
          div {{ series.nextAiringTitle }}
