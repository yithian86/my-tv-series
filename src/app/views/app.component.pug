//-                     TITLE                         -//
.App__MainTitle My Tv Series


//-             SEARCH TORRENT COMPONENT              -//
.App__SearchTorrentWrapper
  app-search-torrent(
    '[setStatusInfo]'="setStatusInfo"
    '[uploadCurrentSeries]'="uploadCurrentSeries"
    '[currentSeriesIndex]'="currentSeriesIndex"
    '[searchForm]'="searchForm"
    '[watchList]'="watchList"
  )


//-                WATCHLIST COMPONENT                -//
.App__WatchlistWrapper
  app-watchlist(
    '[selectSeries]'="selectSeries"
    '[setStatusInfo]'="setStatusInfo"
    '[watchList]'="watchList"
  )

  //-             ADD SERIES COMPONENT                -//
  app-add-series-form(
    '[uploadWatchlist]'="uploadWatchlist"
    '[addSeriesForm]'="addSeriesForm"
    '[watchList]'="watchList"
  )


//-                   STATUS BOXES                  -//
.App__StatusInfoBox('[hidden]'="isStatusInfoHidden()")
  .App__StatusInfoMessage('[ngClass]'="getStatusInfoClass()") {{ statusInfo.message }}
